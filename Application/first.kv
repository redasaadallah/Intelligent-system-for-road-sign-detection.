#: import FallOutTransition kivy.uix.screenmanager.FallOutTransition
<First>
    name:'first'
    md_bg_color:255/255,255/255,255/255,1
    
    Image:
        source:"logo/6.png"
        size_hint:0.4,0.6
        pos_hint: {'center_x': 0.5,'center_y': 0.8}
    MDLabel:
        text: "Bienvennu"
        halign:'center'
        pos_hint:{'center_x':0.5,'center_y':0.55}
        bold:True
        font_style:'Display'
    MDLabel:
        text: "L'IA sur la Route, Sécurité Optimisée."
        halign:'center'
        pos_hint:{'center_x':0.5,'center_y':0.52}
    MDButton:
        style: "elevated"
        pos_hint: {"center_x": .5, "center_y": .3}
        on_release:
            app.root.current="login"
            app.root.transition.direction ='up'
            #app.root.transition.duration=0
        MDButtonIcon:
            icon: "login-variant"
        MDButtonText:
            text: "Commancer"
            bold:True
    MDBoxLayout:
        md_bg_color: 255/255,100/255,150/255,1
        size_hint: 0.3, 0.6,
        pos_hint: {'center_x': 1,'center_y': 0.1}
        radius:1000,0,0,0
    MDBoxLayout:
        md_bg_color: 0,255,0,1
        size_hint: 0.3, 0.6,
        pos_hint: {'center_x': 0,'center_y': 0.1}
        radius:0,1000,0,0
    MDBoxLayout:
        md_bg_color: 0,0,255,1
        size_hint: 0.3, 0.3,
        pos_hint: {'center_x': 0,'center_y': 0.9}
        radius:0,0,1000,0
    MDBoxLayout:
        md_bg_color: 255,0,0,1
        size_hint: 0.3, 0.3,
        pos_hint: {'center_x': 1,'center_y': 0.9}
        radius:0,0,0,1000
    Image:
        source:"logo/7.png"
        size_hint:.5,.13
        pos_hint: {'center_x': 0.48,'center_y': 0.08}
    MDLabel:
        text: "Tous droits réservés 2025"
        halign:'center'
        pos_hint:{'center_x':0.5,'center_y':0.02}
        theme_text_color: "Custom"
        text_color: "blue"
        font_style:'Label'
        role:'medium'
        
        
    
    
    

        
    