<Mode>
    name:'mode'
    md_bg_color:255/255,255/255,255/255,1
    Image:
        source: 'logo/cover6.jpg'  # Replace with your image path
        allow_stretch: True
        keep_ratio: False  # Set to False to cover the entire window
    
        
    Image:
        source:"logo/8.png"
        size_hint:0.3,.3
        pos_hint: {'center_x': 0.25,'center_y': 0.8}
    MDBoxLayout:
        size_hint: 0.00000000001,.15
        radius:100
        md_bg_color:255,153/255,53/255,1
        pos_hint: {'center_x': 0.43,'center_y': 0.8}
        canvas.after:
            Color:
                rgba: 255, 153/255, 51/255, 1
            Line:
                width: 3
                ellipse: self.x, self.y, self.width, self.height
    MDLabel:
        text: "L'IA sur la Route,\n Sécurité Optimisée."
        halign:'center'
        pos_hint:{'center_x':0.7,'center_y':0.8}
        bold:True
    
    
    
    Image:
        source:"logo/7.png"
        size_hint:.5,.13
        pos_hint: {'center_x': 0.48,'center_y': 0.07}
    MDLabel:
        text: "Tous droits réservés 2025"
        halign:'center'
        pos_hint:{'center_x':0.5,'center_y':0.02}
        theme_text_color: "Custom"
        text_color: "blue"
        font_style:'Label'
        role:'medium'
    MDButton:
        height: "100dp"
      
        pos_hint: {"center_x": .6, "center_y": .5}
        style: "filled"
        on_release:
            app.auto()
        MDButtonText:
            text: "Régulation Auto "
            pos_hint: {"center_x": .5, "center_y": .5} 
            bold:True
            font_style:'Title'
    Image:
        source:"auto.png"
        size_hint:.2,.2
        pos_hint: {'center_x': 0.18,'center_y': 0.5}
    MDButton:
        height: "100dp"
        
        pos_hint: {"center_x": .6, "center_y": .33}
        style: "filled"
        on_release:
            app.alerte()
        
        MDButtonText:
            text: "Alerte Panneaux"
            pos_hint: {"center_x": .5, "center_y": .5} 
            bold:True
            font_style:'Title'      
    Image:
        source:"alerte.png"
        size_hint:.15,.15
        pos_hint: {'center_x': 0.18,'center_y': 0.33}
    
    MDTopAppBar:
        type: "small"
        size_hint_x: 1
        pos_hint: {"center_x": .5, "center_y": 0.96}
        
        MDTopAppBarLeadingButtonContainer:
            md_bg_color:255,0,0
            MDActionTopAppBarButton:
                style:'filled'
                icon: "arrow-left"
                on_release:
                    app.root.current="home"
                    app.root.transition.direction ='right'
                    #app.root.transition.duration=0
                
                
        MDTopAppBarTitle:
            text: " M. REDA SAADALLAH"
            font_style:'Title'
            role:'medium'
          
            
        MDTopAppBarTrailingButtonContainer:

            
            
            
            MDActionTopAppBarButton:
                icon: "account-box-outline"
            MDActionTopAppBarButton:
                style:'filled'
                icon: "menu"
                on_release:nav_drawer.set_state('open')
                
                
    MDNavigationDrawer:
        id: nav_drawer
        MDScreen:
            size_hint:1,1
            Image:
                source: 'logo/cover1.jpeg'  # Replace with your image path
                allow_stretch: True
                keep_ratio: False  # Set to False to cover the entire window
            
            Image:
                source:"logo/8.png"
                size_hint:.5,.5
                pos_hint: {'center_x': 0.5,'center_y': 0.8}
            MDButton:
                style: "elevated"
                pos_hint: {"center_x": .5, "center_y": .5}
                on_release:
                    app.deconnecter()
                    nav_drawer.set_state('close')
                MDButtonIcon:
                    icon: "logout"
                MDButtonText:
                    text: "Déconnecter"
                    bold:True
            MDButton:
                style: "text"
                pos_hint: {"center_x": .5, "center_y": .19}
                MDButtonIcon:
                    icon: "google"
                MDButtonText:
                    text: "Google"
                    bold:True
            MDButton:
                style: "text"
                pos_hint: {"center_x": .5, "center_y": .12}
                MDButtonIcon:
                    icon: "facebook"
                MDButtonText:
                    text: "Facebook"
                    bold:True
            MDButton:
                style: "text"
                pos_hint: {"center_x": .5, "center_y": .05}
                MDButtonIcon:
                    icon: "instagram"
                MDButtonText:
                    text: "Instagram"
                    bold:True

                    
                    

            


        



                