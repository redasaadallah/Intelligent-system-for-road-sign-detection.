<Home>
    name:"home"
    md_bg_color: 255,255,255,1
    id:sc
    Image:
        source: 'logo/cover6.jpg'  # Replace with your image path
        allow_stretch: True
        keep_ratio: False  # Set to False to cover the entire window
    ScrollView:
        
        size:self.size
        do_scroll_x:True
        do_scroll_y:True
        BoxLayout:
            orientation:"vertical"
            padding:(0,1040,0,-400)
            size_hint_y:None
            
            height:self.minimum_height
            width:self.minimum_width
            Screen:
                size_hint_y:None
                
                height:300
                width:400
                Image:
                    source:"logo/8.png"
                    size_hint:0.5,.5
                    pos_hint: {'center_x': 0.25,'center_y': 3.9}
                MDBoxLayout:
                    size_hint: 0.00000000001,.4
                    radius:100
                    md_bg_color:255,153/255,53/255,1
                    pos_hint: {'center_x': 0.43,'center_y': 3.9}
                    canvas.after:
                        Color:
                            rgba: 255, 153/255, 51/255, 1
                        Line:
                            width: 3
                            ellipse: self.x, self.y, self.width, self.height
                MDLabel:
                    text: "L'IA sur la Route,\n Sécurité Optimisée."
                    halign:'center'
                    pos_hint:{'center_x':0.7,'center_y':3.9}
                    bold:True  
                MDGridLayout:
                    cols:2
                    pos_hint:{'center_x':0.5,'center_y':2.8}
                    size_hint:0.9,1.5
                    #padding:[dp(25),dp(15),dp(25),dp(45)]
                    spacing:dp(5)
                    MDCard:
                        redius:20
                        spacing:1
                        on_release:
                            app.root.current="mode"
                            app.root.transition.direction ='left'
                            #app.root.transition.duration=0
                        MDBoxLayout:
                            orientation:'vertical'
                            md_bg_color:153/255,153/255,255
                            size_hint:1,1
                            radius:15
                            padding:0,10,0,5
                            Image:
                                source:"logo/alternative.png"
                                size_hint:1,1.7
                                halign:'center'
                                pos_hint:{'center_x':0.5,'center_y':2.9}

                            MDLabel:
                                theme_text_color:'Custom'
                                text_color:1,1,1,1
                                text:"Sélection du mode"
                                font_style:"Label"
                                halign:"center"
                                bold:True   
                    MDCard:
                        md_bg_color:0/255,204/255,0/255,1
                        spacing:1
                        image:'mesrendezvous - Copy1.png'
                        on_release:
                            app.root.current="respect"
                            app.root.transition.direction ='right'
                            #app.root.transition.duration=0
                        MDBoxLayout:
                            orientation:'vertical'
                            md_bg_color:255,153/255,0
                            size_hint:1,1
                            radius:15
                            padding:0,10,0,10
                            
                            Image:
                                source:"logo/analysis.png"
                                size_hint:0.5,2
                                halign:'center'
                                pos_hint:{'center_x':0.5,'center_y':2.9}
                                
                            MDLabel:
                                text:"Statistiques Panneaux"
                                theme_text_color:'Custom'
                                text_color:1,1,1,1
                                halign:"center"
                                bold:True
                                font_style:"Label"

                    MDCard:
                        on_release:
                            app.root.current="info"
                            app.root.transition.direction ='left'
                            #app.root.transition.duration=0
                        MDBoxLayout:
                            orientation:'vertical'
                            md_bg_color:0,204/255,0
                            size_hint:1,1
                            radius:15
                            padding:0,30,0,10
                            
                            Image:
                                source:"logo/information.png"
                                size_hint:0.5,1.7
                                halign:'center'
                                pos_hint:{'center_x':0.5,'center_y':2.9}
                            MDLabel:
                                theme_text_color:'Custom'
                                text_color:1,1,1,1
                                text:"Vos informations"
                                halign:"center"
                                bold:True
                                font_style:"Label"
                    MDCard:
                        md_bg_color:0,0,1,1
                        radius: dp(25)
                        ripple_behavior: True
                        id:fourth_card
                        on_release:app.static()
                        orientation: 'vertical'
                        MDBoxLayout:
                            md_bg_color:255/255,51/255,255
                            size_hint:1,1
                            radius:15
                            orientation:"vertical"
                            padding:0,10,0,30
                            Image:
                                source:"logo/improvement.png"
                                size_hint:2,9
                                halign:'center'
                                pos_hint:{'center_x':0.5,'center_y':2.9}
                            MDLabel:
                                theme_text_color:'Custom'
                                text_color:1,1,1,1
                                text:"Résumé Détection"
                                halign:"center"
                                bold:True
                                font_style:"Label"
                            
                        
                            
                            
                    MDCard:
                        md_bg_color:0,0,1,1
                        spacing:0
                        on_release:
                            app.root.current="why"
                            app.root.transition.direction ='left'
                            #app.root.transition.duration=0
                        
                        MDBoxLayout:
                            orientation:'vertical'
                            md_bg_color:255,0,0
                            size_hint:1,1
                            radius:15
                            md_bg_color:255,51/255,153/255
                            padding:0,25,0,0
                            Image:
                                source:"logo/question-mark.png"
                                size_hint:0.5,1.5
                                halign:'center'
                                pos_hint:{'center_x':0.5,'center_y':2.9}
                            MDLabel:
                                theme_text_color:'Custom'
                                text_color:1,1,1,1
                                text:"Pourquoi notre app"
                                halign:"center"
                                bold:True
                                font_style:"Label"
                            
                            
                    MDCard:
                        
                        on_release:
                            app.root.current="contact"
                            app.root.transition.direction ='left'
                            #app.root.transition.duration=0
                        MDBoxLayout:
                            orientation:'vertical'
                            md_bg_color:184/255,204/255,0
                            size_hint:1,1
                            radius:15
                            padding:0,30,0,0
                            Image:
                                source:"logo/contact.png"
                                size_hint:0.5,1.4
                                halign:'center'
                                pos_hint:{'center_x':0.5,'center_y':2.9}
                            MDLabel:
                                theme_text_color:'Custom'
                                text_color:1,1,1,1
                                text:"Contact"
                                halign:"center"
                                bold:True
                                font_style:"Label"
                          
                            

                            
        
               
                
                
                
                                        
                                      
                                        
                                            
                                        
                                           
                                        
                                        
                                        
                
                MDLabel:
                    text: "Tous droits réservés 2024"
                    halign:'center'
                    pos_hint:{'center_x':0.5,'center_y':1.8}
                    theme_text_color: "Custom"
                    text_color: "blue"
                    font_style:'Label'
                    role:'medium'
    
        
        
    MDTopAppBar:
        type: "small"
        size_hint_x: 1
        pos_hint: {"center_x": .5, "center_y": 0.95}
        
        MDTopAppBarLeadingButtonContainer:
            md_bg_color:255,0,0
            MDActionTopAppBarButton:
                style:'filled'
                icon: "menu"
                on_release:
                    nav_drawer.set_state('open')
                    
                
        MDTopAppBarTitle:
            text: "Bonjour M. REDA SAADALLAH"
            font_style:'Title'
            role:'medium'
          
            
        MDTopAppBarTrailingButtonContainer:

            
            
            
            MDActionTopAppBarButton:
                icon: "account-box-outline"
                
                
    MDNavigationDrawer:
        id: nav_drawer
        MDScreen:
            size_hint:1,1
            Image:
                source: 'logo/cover1.jpeg'  # Replace with your image path
                allow_stretch: True
                keep_ratio: False  # Set to False to cover the entire window
            
            Image:
                source:"logo/8.png"
                size_hint:.5,.5
                pos_hint: {'center_x': 0.5,'center_y': 0.8}
            MDButton:
                style: "elevated"
                pos_hint: {"center_x": .5, "center_y": .5}
                on_release:
                    app.deconnecter()
                    nav_drawer.set_state('close')
                MDButtonIcon:
                    icon: "logout"
                MDButtonText:
                    text: "Déconnecter"
                    bold:True
            MDButton:
                style: "text"
                pos_hint: {"center_x": .5, "center_y": .19}
                MDButtonIcon:
                    icon: "google"
                MDButtonText:
                    text: "Google"
                    bold:True
            MDButton:
                style: "text"
                pos_hint: {"center_x": .5, "center_y": .12}
                MDButtonIcon:
                    icon: "facebook"
                MDButtonText:
                    text: "Facebook"
                    bold:True
            MDButton:
                style: "text"
                pos_hint: {"center_x": .5, "center_y": .05}
                MDButtonIcon:
                    icon: "instagram"
                MDButtonText:
                    text: "Instagram"
                    bold:True

                    
                    

            

