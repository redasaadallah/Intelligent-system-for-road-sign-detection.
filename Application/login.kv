<Login>
    name:'login'
    md_bg_color:255,255,255
	MDBoxLayout:
        md_bg_color: 255,153/255,51/255,10
        size_hint: 1, 1.1
        pos_hint: {'center_x': 0.5,'center_y': 1}
        radius:100
    MDLabel:
        text:"connectez-vous"
        underline_width: 2
        pos_hint: {'center_x': 0.65,'center_y': 0.87}
        halign:"center"
        bold:True
        color: 1 , 1 , 1 , 1
        font_style:'Title'
    Image:
        source:"logo/end-user.png"
        size_hint:.4,.4
        pos_hint: {'center_x': 0.2,'center_y': 0.88}
        

    MDTextField:
        mode:'outlined'
       
        pos_hint: {'center_x': 0.5,'center_y': 0.73}
        size_hint:0.9,0.087
        MDTextFieldHintText:
            text: "Email"
        MDTextFieldLeadingIcon:

    MDIcon:
        icon: "gmail"
        pos_hint: {'center_x': 0.1,'center_y': 0.733}
        size_hint:0.9,0.06 
    MDTextField:
        mode:'outlined'
        pos_hint: {'center_x': 0.5,'center_y': 0.62}
        size_hint:0.9,0.087
        id:pass1
        hint_text:"password"
        MDTextFieldHintText:
            text: "Mot de passe"
        MDTextFieldLeadingIcon:
            
    MDIcon:
        icon: "onepassword"
        pos_hint: {'center_x': 0.1,'center_y': 0.622}
        size_hint:0.9,0.06 
    MDIconButton:
        icon:"eye"
        theme_text_color: 'Custom'
        text_color: 255,0, 0, 10
        pos_hint: {'center_x': 0.9,'center_y': 0.62}
        on_release:
			self.icon="eye" if self.icon=="eye-off" else "eye-off"
			pass1.password=True if  pass1.password is False else False
    MDButton:
        style: "filled"
        pos_hint: {'center_x': 0.5,'center_y': 0.52}
        on_release:app.connecter()
        MDButtonIcon:
            icon: "login"
        MDButtonText:
            text: "connecter"
            bold:True
    Image:
        source:"logo/3.png"
        size_hint:0.9,.8
        pos_hint: {'center_x': 0.5,'center_y': 0.25}
        opacity: 0.1
    MDLabel:
        text:"mot de passe oublié?"
        pos_hint: {'center_x': 0.5,'center_y': 0.4}
        halign:"center"
        bold:True   
    Image:
        source:"logo/forgot-password.png"
        size_hint:.15,.1
        pos_hint: {'center_x': 0.3,'center_y': 0.34}
    MDButton:
        style: "elevated"
        
        pos_hint: {'center_x': 0.58,'center_y': 0.34}
        MDButtonText:
            text: "Récupérez-le!"
            bold:True
    MDBoxLayout:
        size_hint: 0.8, 0.00000000001
        radius:100
        md_bg_color:1,1,1,1
        pos_hint: {'center_x': 0.5,'center_y': 0.25}
        canvas.after:
            Color:
                rgba: 0, 255, 0, 1
            Line:
                width: 3
                ellipse: self.x, self.y, self.width, self.height
    MDLabel:
        text:"Vous n'avez pas encore de compte ?"
        pos_hint: {'center_x': 0.5,'center_y': 0.22}
        halign:"center"
        bold:True
    MDButton:
        style: "filled"
        pos_hint: {'center_x': 0.5,'center_y': 0.16}
        MDButtonText:
            text: "s'inscrire"
            bold:True
    
    MDLabel:
        text: "Tous droits réservés 2024"
        halign:'center'
        pos_hint:{'center_x':0.5,'center_y':0.04}
        theme_text_color: "Custom"
        text_color: "blue"
        font_style:'Label'
        role:'medium'
    
    MDBoxLayout:
		md_bg_color: 255,153/255,51/255,10
		size_hint: 1, 0.05
		pos_hint: {'center_x': 0.5,'center_y': 0}
		radius:15